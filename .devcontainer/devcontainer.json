{
  "name": "Kubernetes Dev Container",
  "dockerFile": "Dockerfile",
  "context": "..",
  "remoteUser": "vscode",
  "features": {
      "ghcr.io/devcontainers/features/docker-in-docker:2": {
          "version": "latest"
      }
  },
  "customizations": {
    "vscode": {
      "settings": {
        "workbench.colorTheme": "GitHub Dark",
        "editor.fontSize": 12,
        "terminal.integrated.defaultProfile.linux": "bash",
        "terminal.integrated.fontSize": 12
      },
      "extensions": [
        "ms-azuretools.vscode-docker",
        "ms-kubernetes-tools.vscode-kubernetes-tools",
        "redhat.vscode-yaml",
        "GitHub.github-vscode-theme"
      ]
    }
  },
  "build": {
    "dockerfile": "Dockerfile",
    "args": { "DOCKER_GID": "${localEnv:DOCKER_GID}" }
  },
  "postCreateCommand": "kubectl version --client && k9s version && k3d version",
  "postStartCommand": "cat .devcontainer/.bashrc_append >> /home/vscode/.bashrc || true"
}
